<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginForm">

    <!-- (1) Pasang gambar untuk logo di tengah dengan ukuran 150dp dan marginTop 50dp -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="50dp"
        android:src="@mipmap/ic_launcher_round" />

    <!-- (2) Buatlah EditText untuk "username" di bawah gambar -->
    <EditText
        android:id="@+id/txtUsername"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgLogo"
        android:layout_centerInParent="true"
        android:hint="username" />

    <!-- (3) Buatlah EditText untuk "password" di bawah username -->
    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtUsername"
        android:layout_centerInParent="true"
        android:hint="password"
        android:inputType="textPassword" />

    <!-- (4) Buatlah Button untuk "Login" di bawah password -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPassword"
        android:layout_centerInParent="true"
        android:text="Login" />

</RelativeLayout>